# Kraken Grid Trading Bot - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# KRAKEN API CREDENTIALS (REQUIRED)
# ===========================================
# Get these from: https://www.kraken.com/u/settings/api
# Required permissions: Query Funds, Query Open Orders & Trades,
#                       Create & Modify Orders, Cancel/Close Orders
KRAKEN_API_KEY=your_api_key_here
KRAKEN_API_SECRET=your_api_secret_here

# ===========================================
# TRADING CONFIGURATION (OPTIONAL OVERRIDES)
# ===========================================
# These override config.yaml values if set

# Trading pair (default: XBTUSD)
# KRAKEN_TRADING_PAIR=XBTUSD

# Grid parameters
# KRAKEN_GRID_NUM_LEVELS=10
# KRAKEN_GRID_RANGE_PERCENT=5.0
# KRAKEN_GRID_ORDER_SIZE_QUOTE=40.0

# ===========================================
# OPERATIONAL SETTINGS
# ===========================================
# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Paper trading mode (true/false)
# Set to true for paper trading, false for live trading
PAPER_TRADING=true
